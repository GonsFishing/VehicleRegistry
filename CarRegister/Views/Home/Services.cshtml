@model IEnumerable<CarRegister.Models.ListofVehicleServiceModel>

@{
    ViewBag.Title = "Services";
}

<h2>Services</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LicencePlateNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.Id)
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LicencePlateNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateService", new
       {
           id=item.Id,
           LicencePlateNumber = item.LicencePlateNumber,
           ServiceDate = item.ServiceDate,
           Description = item.Description
       })
            @Html.ActionLink("Delete Service", "DeleteService", new { id=item.Id })
        </td>
    </tr>
}

</table>
