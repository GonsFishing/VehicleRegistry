@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Vehicle Registry</h1>
    <p class="lead">
        The perfect platform to register and store important data about your Vehicles. <br />
        Register your car or other roadfaring vehicles @Html.ActionLink("Here", "RegisterVehicle", "Home")
    </p>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Register a vehicle</h2>
        <p>
            Register your a car so you can book a service with us or just keep track of all your important data.
        </p>
        <p>
            @Html.ActionLink("Register Vehicle", "RegisterVehicle", "Home") &raquo;
        </p>
    </div>

    <div class="col-md-3">
        <h2>Book service</h2>
        <p>Book service for your vehicle and git it in perfect shape for the season.</p>
        <p>@Html.ActionLink("Book Service", "RegisterService", "Home") &raquo;</p>
    </div>
</div>